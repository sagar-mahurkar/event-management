{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "lib": ["es5", "es6"],

    "typeRoots": ["./src/types", "./node_modules/@types"],

    "skipLibCheck": true,
    "sourceMap": true
  },

  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ]
}
